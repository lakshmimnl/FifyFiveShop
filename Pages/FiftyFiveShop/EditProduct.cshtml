@page
@model FifyFiveShop.Pages.FiftyFiveShop.EditProductModel
<br />
<h2 class="text-info">Edit Product</h2>
<br />
<div class="border container">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Product.Id" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Product.SKU"></label>
            </div>
            <div class="col-6">
                <input asp-for="Product.SKU" class="form-control" />
            </div>
            <span asp-validation-for="Product.SKU" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Product.UnitPrice"></label>
            </div>
            <div class="col-6">
                <input asp-for="Product.UnitPrice" class="form-control" />
            </div>
            <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
        </div>
       

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}